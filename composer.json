{
    "name": "platformcoop/platformcoop-support",
    "type": "wordpress-plugin",
    "description": "Utilities for the Platform Cooperativism Consortium's website.",
    "authors": [
        {
            "name": "Platform Cooperativism Consortium",
            "email": "code@platform.coop"
        }
    ],
    "require": {
        "davidgorges/human-name-parser": "^1.0",
        "johnbillion/extended-cpts": "^4.2"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.8.0"
    },
    "scripts": {
        "standards": "vendor/bin/phpcs . --extensions=php --standard=phpcs.xml.dist --ignore=node_modules,tests,vendor",
        "test": [
            "@standards"
        ]
    }
}
